[[ -n ${ZSH_VERSION-} ]] &&
  TESTML_COMPILER_ROOT="$0" ||
  TESTML_COMPILER_ROOT="${BASH_SOURCE[0]}"

TESTML_COMPILER_ROOT="$(cd "$(dirname "$TESTML_COMPILER_ROOT")" && pwd)"

export TESTML_COMPILER_ROOT
export PATH="$TESTML_COMPILER_ROOT/bin:$PATH"
export MANPATH="$TESTML_COMPILER_ROOT/man:$MANPATH"
export PERL5LIB="$TESTML_COMPILER_ROOT/lib:$PERL5LIB"

